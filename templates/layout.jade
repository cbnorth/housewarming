doctype html

- var bodyClasses = [];
- var tabsMobileNav = [];
block beforeBody

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
      meta(name="pinterest" content="nopin")
      meta(name="description" content=locals.description)
      meta(name="ROBOTS" content="NOINDEX, NOFOLLOW")
      title= locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      <!-- Standard Favicon -->
      link(rel="icon" type="image/x-icon" href="assets/images/fav.ico?v=2")
      <!-- For iPhone 4 Retina display: -->
      link(rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/images/fav.png")
      <!-- For iPad: -->
      link(rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/images/fav.png")
      <!-- For iPhone: -->
      link(rel="apple-touch-icon-precomposed" href="assets/images/fav.png")
      link(rel='stylesheet', href='css/styles.css')
  body(class=bodyClasses)
    main
      div.main_content
        block content

    div.cover_layer
    div.loading_bar

    include scripts
